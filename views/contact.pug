extends base.pug

block script
  script(src='/static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/stylecontact.css

block content 
    div.container 
        h1 Contact Us
        form(action="/contact", method="post" class="myform")
            input(type="text" , class="myinput" , name="name" , placeholder="Enter your name" ,pattern="[a-z,A-Z, ]",required) 
            input(type="phone" , class="myinput" , name="phone" , placeholder="Enter your phone Number",pattern="[0-9]{10}",required) 
            input(type="email" , class="myinput" , name="email" , placeholder="Enter your email",pattern="[a-z,A-Z]",required) 
            input(type="text" , class="myinput" , name="address" , placeholder="Enter your address",pattern="[a-z,A-Z,0-9,.,-, ]",required) 
            input(type="text" , class="myinput" , name="desc" , placeholder="dance form you like",pattern="[a-z,A-Z,0-9,.,-, ]",required) 
            button(class="btn")
              | submit  
